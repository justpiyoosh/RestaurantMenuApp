<h1>Menu</h1>

<head>
  <title>Your Restaurant Menu</title>
  <!-- Include Materialize CSS using CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>


<!-- CSV file upload form -->
<%= form_tag({ action: :upload_csv }, multipart: true) do %>
  <div style="margin-bottom: 10px;">
    <label for="csv_file">Upload CSV file for uploading menu using csv file:</label>
  </div>
  <%= file_field_tag :csv_file, style: "margin-bottom: 10px;" %>
  <%= submit_tag 'Upload', class: "btn waves-effect waves-light" %>
<% end %>



<table class="table">
  <thead>
    <tr>
    <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Allergens</th>
      <th>Category</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.id %></td>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.dish_type %></td>
        <td><%= dish.allergens %></td>
        <td><%= dish.category %></td>
        <td><%= dish.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
